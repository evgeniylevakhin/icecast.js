{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "target": "es5"
  },
  "linterOptions": {
    "typeCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
